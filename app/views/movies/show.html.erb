<section class="event-details">
  <div class="details">
    <h1> <%= @movie.title %></h1>
    <h2>
       <%= @movie.released_on.year %>
    </h2>
    <h3>
      <%= total_gross(@movie) %>
    </h3>
    <p>
      <%= @movie.description %>
    </p>
  </div>
</section>

<section class="admin">
  <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
  <%= link_to "Destroy", @movie, class: "button",
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</section>