<section class="user">
  <%= profile_image(@user) %>
  <h1><%= @user.name %></h1>
  <h2><%= @user.username %></h2>
  <br/>
  <h2><%= mail_to(@user.email) %></h2>

  <div class="action">
    <%= link_to "Edit Account", edit_user_path(@user), class: "btn btn-primary" %>
    <%= link_to "Delete account", @user, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger"  %>
</section>
